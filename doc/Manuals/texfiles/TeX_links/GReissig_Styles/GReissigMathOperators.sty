% Floor, Ceil:
\def\floor#1{\ensuremath{\left\lfloor#1\right\rfloor}}
\def\ceil#1{\ensuremath{\left\lceil#1\right\rceil}}
% Intervals:
% see [HewittStromberg75]
\def\intcc#1{\ensuremath{\left[#1\right]}}% not needed
%\def\intoo#1{\ensuremath{\mathopen]#1\mathclose[}}
%\def\intoc#1{\ensuremath{\mathopen]#1]}}
%\def\intco#1{\ensuremath{[#1\mathclose[}}
\def\intoo#1{\ensuremath{\left\orbrack#1\right\clbrack}}
\def\intoc#1{\ensuremath{\left\orbrack#1\right]}}
\def\intco#1{\ensuremath{\left[#1\right\clbrack}}
% Discrete intervals:
% as before, but w/ semi-colon in place of a comma [Reissig11a]
%
% Strecken (segmente): wie hier auch left-right anstaendig?
\def\segcc#1{\ensuremath{\left\llbracket#1\right\rrbracket}}
\def\segoo#1{\ensuremath{\left\rrbracket#1\right\llbracket}}
\def\segoc#1{\ensuremath{\left\rrbracket#1\right\rrbracket}}
\def\segco#1{\ensuremath{\left\llbracket#1\right\llbracket}}
